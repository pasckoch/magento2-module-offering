<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!-- offer -->
    <table name="dnd_offer" resource="default" engine="innodb" comment="Offer table">
        <column xsi:type="int" name="offer_id" unsigned="true" nullable="false" identity="true" comment="Offer Id"/>
        <column xsi:type="varchar" name="title" nullable="false" length="50" comment="Title"/>
        <column xsi:type="varchar" name="label" nullable="false" length="255" comment="Label"/>
        <column xsi:type="varchar" name="image_path" nullable="true" length="255" comment="Image Path"/>
        <column xsi:type="varchar" name="redirect_url" nullable="false" length="255" comment="Redirection Url"/>
        <column xsi:type="date" name="date_from" nullable="true" comment="Date From"/>
        <column xsi:type="date" name="date_to" nullable="true" comment="Date To"/>
        <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="offer_id"/>
        </constraint>
    </table>

    <!-- offer category -->
    <table name="dnd_offer_category" resource="default" engine="innodb" comment="Category offers table">
        <column xsi:type="int" name="offer_id" unsigned="true" nullable="false" identity="true" comment="Offer Id"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" comment="Category Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="offer_id"/>
            <column name="category_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="DND_OFFER_CATEGORY_OFFER_ID_DND_OFFER_OFFER_ID" table="dnd_offer_category"
                    column="offer_id" referenceTable="dnd_offer" referenceColumn="offer_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="DND_OFFER_CATEGORIES_CATEGORY_ID_CATALOG_CATEGORY_ENTITY" table="dnd_offer_categories"
                    column="category_id" referenceTable="catalog_category_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="DND_OFFER_CATEGORIES_CATEGORY_ID" indexType="btree">
            <column name="category_id"/>
        </index>
    </table>

    <!-- offer store -->
    <table name="dnd_offer_store" resource="default" engine="innodb" comment="Offer To Store Linkage Table">
        <column xsi:type="int" name="offer_id" unsigned="true" nullable="false" identity="false"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                comment="Store ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="offer_id"/>
            <column name="store_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="DND_OFFER_STORE_OFFER_ID_DND_OFFER_OFFER_ID" table="dnd_offer_store"
                    column="offer_id" referenceTable="dnd_offer" referenceColumn="offer_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="DND_OFFER_STORE_STORE_ID_STORE_STORE_ID" table="dnd_offer_store"
                    column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="DND_OFFER_STORE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
