<?xml version="1.0" encoding="UTF-8"?>
<!-- offering module is catalog and cms dependent -->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">offering_offer_form.offer_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Offer Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="DnD\Offering\Block\Adminhtml\Offer\Edit\SaveButton"/>
            <button name="delete" class="DnD\Offering\Block\Adminhtml\Offer\Edit\DeleteButton"/>
            <button name="back" class="DnD\Offering\Block\Adminhtml\Offer\Edit\BackButton"/>
        </buttons>
        <namespace>offering_offer_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>offering_offer_form.offer_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="offer_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="offering/offer/save"/>
        </settings>
        <dataProvider class="DnD\Offering\Ui\DataProvider\Offer\Form\DataProvider" name="offer_form_data_source">
            <settings>
                <requestFieldName>offer_id</requestFieldName>
                <primaryFieldName>offer_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label/>
        </settings>
        <field name="offer_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>offer_id</dataScope>
            </settings>
        </field>
        <field name="title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Offer Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="label" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Offer Label</label>
                <dataScope>label</dataScope>
            </settings>
        </field>
        <field name="date_from" sortOrder="30" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">From Date</label>
                <visible>true</visible>
                <dataScope>date_from</dataScope>
            </settings>
        </field>
        <field name="date_to" sortOrder="40" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">To Date</label>
                <visible>true</visible>
                <dataScope>date_to</dataScope>
            </settings>
        </field>
        <field name="image_path" sortOrder="50" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Offer Image</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="offering/offer_image/upload"/>
                        </uploaderConfig>
                        <previewTmpl>DnD_Offering/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <notice translate="true">Maximum file size: 2 MB. Allowed file types: JPG, JPEG, GIF, PNG.</notice>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <urlInput name="redirect_url" sortOrder="60" template="Magento_PageBuilder/form/element/url-input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Redirect Url</label>
                <dataScope>redirect_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
                <validation>
                    <rule name="validate-message-no-link" xsi:type="boolean">true</rule>
                    <rule name="validate-message-no-widget" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="validation.validate-message-no-link">${$.parentName}.message:value</link>
                    <link name="validation.validate-message-no-widget">${$.parentName}.message:value</link>
                </imports>
            </settings>
        </urlInput>
        <field name="category_ids" component="Magento_Ui/js/form/element/ui-select" sortOrder="70" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="chipsEnabled" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Categories</label>
                <dataScope>category_id</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="DnD\Offering\Ui\Component\Category\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="store_ids" sortOrder="80" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">offer</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <tooltip>
                    <link>https://experienceleague.adobe.com/docs/commerce-admin/start/setup/websites-stores-views.html#scope-settings</link>
                    <description>What is this?</description>
                </tooltip>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="DnD\Offering\Ui\Component\Store\AllOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
</form>
